{
    // "python.pythonPath": "path/to/your/python", // 가상 환경의 Python 경로
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.analysis.typeCheckingMode": "off",
    "python.analysis.autoImportCompletions": true,
    "python.formatting.provider": "black", // 포맷터로 black 선택
    "python.formatting.blackPath": "path/to/black", // black 경로
    "python.formatting.blackArgs": [
      "--line-length",
      "88" // black 기본 라인 길이
    ],
    "editor.formatOnSave": true, // 파일 저장 시 자동 포맷팅
    "[python]": {
      "editor.codeActionsOnSave": {
        "source.fixAll": true, // 저장 시 자동 코드 수정
        "source.organizeImports": true // 저장 시 import 정렬
      }
    },
    "python.sortImports.args": ["--profile", "black"], // isort에 black 프로필 적용
    "python.linting.flake8Args": [
      "--max-line-length=88", // flake8 라인 길이 설정
      "--ignore=E203,W503" // black과 충돌하는 규칙 무시
    ],
    "python.linting.pylintArgs": [
      "--disable=C0111" // pylint 설정 (필요에 따라 추가)
    ]
  }

